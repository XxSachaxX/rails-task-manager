<h1>This shows the detail of a task</h1>
<ul>
<li><%=@task.title %></li>
<li><%=@task.details %></li>
<li><%=@task.completed  %></li>
<li><%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></li>
</ul>

<%= link_to "Back to tasks index", tasks_path %>
